@page
@model LockoutModel
@{
    ViewData["Title"] = "Cuenta bloqueada";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px; width: 100%;">
        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828506.png" alt="Cuenta bloqueada"
             class="img-fluid mx-auto d-block mb-3" style="max-width: 120px;">

        <h1 class="text-danger">@ViewData["Title"]</h1>
        <p class="text-muted">
            Tu cuenta ha sido bloqueada por razones de seguridad.<br>
            Por favor, contacta al administrador si necesitas asistencia.
        </p>

        <a href="mailto:soporte@empresa.com" class="btn btn-primary mt-3">
            Contactar soporte
        </a>

        <a href="/" class="btn btn-outline-secondary mt-2">
            Volver a inicio
        </a>
    </div>
</div>

