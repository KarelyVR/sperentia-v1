@{
    ViewData["Title"] = "Reporte Vacaciones";
    Layout = "_LayoutAdmin";
}


<style>
    .table td, .table th {
        vertical-align: middle !important;
        text-align: center !important;
    }

    .datatable tbody td {
        cursor: pointer;
    }

</style>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center pb-0 fs-4 mb-5">Reporte Vacaciones</h5>


                    <div class="row mb-3 align-items-center">
                        <div class="col-auto">
                            <label for="mes" class="col-form-label">Mes</label>
                        </div>
                        <div class="col">
                            <select class="form-select" aria-label="Seleccionar mes">
                                <option selected>Seleccionar...</option>
                                <option value="1">Enero</option>
                                <option value="2">Febrero</option>
                                <option value="3">Marzo</option>
                            </select>
                        </div>

                        <div class="col-auto">
                            <label for="estado" class="col-form-label">Estado</label>
                        </div>
                        <div class="col">
                            <select class="form-select" aria-label="Seleccionar estado">
                                <option selected>Seleccionar...</option>
                                <option value="1">Aprobado</option>
                                <option value="2">Pendiente</option>
                                <option value="3">Rechazado</option>
                            </select>
                        </div>
                    </div>

                    <div class="m-2">
                        <button type="button" class="btn btn-success"><i class="ri-file-excel-2-line"></i> Exportar a Excel</button>
                    </div>

                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID colaborador</th>
                                <th>Nombre</th>
                                <th>Empresa</th>
                                <th>Departamento</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Dias pedidos</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>344542</td>
                                <td>Maria Dominguez</td>
                                <td>UX Innovations</td>
                                <td>Managers</td>
                                <td>15-10-2024</td>
                                <td>18-10-2024</td>
                                <td>5</td>
                                <td>Aprobado</td>
                            </tr>
                            <tr>
                                <td>698198</td>
                                <td>Claudia Luna</td>
                                <td>Experience Craft</td>
                                <td>Desarrollo organizacional</td>
                                <td>30-11-2024</td>
                                <td>01-12-2024</td>
                                <td>3</td>
                                <td>Pendiente</td>
                            </tr>

                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

