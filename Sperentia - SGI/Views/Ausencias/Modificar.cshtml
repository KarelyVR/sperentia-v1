@model Sperientia___SGI.ViewModel.AusenciaViewModel

@{
    ViewData["Title"] = "Modificar Ausencia";
    Layout = "_LayoutAdmin";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card ">
                <div class="card-body ">
                    <h5 class="card-title text-center pb-0 fs-4">Modificar Ausencia</h5>
                    <br />

                    <div class="m-4 d-flex  justify-content-center">
                        <form asp-action="ModificarRegistro" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Ausencia.IdAusencia">

                           <div class="row mb-3">
                                <label for="empleado" class="col-md-5 col-lg-6 col-form-label">Empleado</label>
                                <div class="col-md-7 col-lg-6">
                                    <select asp-for="Ausencia.IdUsuario" class="form-select" asp-items="Model.Usuario">
                                        <option>--Seleccione--</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="fechaI" class="col-md-5 col-lg-6 col-form-label">Fecha inicial</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="date" asp-for="Ausencia.FechaInicio">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="fecgaF" class="col-md-5 col-lg-6 col-form-label">Fecha final</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="date" asp-for="Ausencia.FechaFin">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="motivo" class="col-md-5 col-lg-6 col-form-label">Motivo</label>
                                <div class="col-md-7 col-lg-6">
                                    <textarea class="form-control" id="floatingTextarea" style="height: 100px;" asp-for="Ausencia.MotivoAusencia">
                                    </textarea>
                                </div>
                            </div>

                            <br />
                            <div class="row mb-3">

                                <div class="d-inline-flex justify-content-center" role="group">
                                    <button type="button" class="btn btn-sm btn-warning me-2" onclick="location.href='@Url.Action("Index", "Ausencias")'">Volver</button>
                                    <button type="submit" class="btn btn-sm btn-success">Modificar</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>