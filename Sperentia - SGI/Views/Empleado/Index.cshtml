@model IEnumerable<Sperientia___SGI.Models.dbModels.UsuarioInformacion>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}


<style>
    .table td, .table th {
        vertical-align: middle !important;
        text-align: center !important;
    }

    .datatable tbody td {
        cursor: pointer;
    }

</style>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
           
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center pb-0 fs-4">Empleados</h5>

                    <div class="col-lg-12 my-5 ">
                        <button type="button" class="btn btn-success mx-2" onclick="location.href='@Url.Action("Create", "Empleado")'">
                            <i class="bi bi-folder"></i> Crear
                        </button>
                    </div>

                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Nombre</th>
                                <th>Ingreso</th>
                                <th>Contrato</th>
                                <th>Puesto</th>
                                <th>Empresa</th>
                                <th>Departamento</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any()) 
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td id="numColab">@item.NumeroColaborador</td>
                                        <td>@item.UsuarioLogin_IdUsuarioLogin.NombreCompleto</td>
                                        <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                        <td>@item.TipoContrato.Descripcion</td>
                                        <td>@item.Puesto</td>
                                        <td>@item.Empresa.Nombre</td>
                                        <td>@item.Departamento.Nombre</td>
                                        <td>
                                            <a asp-action="Detalles" asp-route-id="@item.IdUsuarioLogin" 
                                            class="btn btn-primary rounded-pill btn-sm"><i class="bi bi-info-lg"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>

