@model Sperientia___SGI.ViewModel.ServiciosViewModel

@{
    ViewData["Title"] = "Crear Servicio";
    Layout = "_LayoutAdmin";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card ">
                <div class="card-body ">
                    <h5 class="card-title text-center pb-0 fs-4">Crear Servicio</h5>
                    <br />

                    <div class="m-4 d-flex  justify-content-center">
                        <form asp-action="Guardar" method="post" enctype="multipart/form-data">


                            <div class="row mb-3">
                                <label for="nombre" class="col-md-5 col-lg-6 col-form-label">Nombre</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="text" asp-for="Servicio.Nombre">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="costo" class="col-md-5 col-lg-6 col-form-label">Costo</label>
                                <div class="col-md-7 col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-text">$ </span>
                                        <input class="form-control" type="number" asp-for="Servicio.Costo">
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="divisa" class="col-md-5 col-lg-6 col-form-label">Divisa</label>
                                <div class="col-md-7 col-lg-6">
                                    <select asp-for="Servicio.CostoDivisa" class="form-select" asp-items="Model.Divisa">
                                        <option>--Seleccione--</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="frecuencia" class="col-md-5 col-lg-6 col-form-label">Frecuencia de pago</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="text" asp-for="Servicio.CostoFrecuencia">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="metodo" class="col-md-5 col-lg-6 col-form-label">Método de pago</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="text" asp-for="Servicio.MetodoPago">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="fechaA" class="col-md-5 col-lg-6 col-form-label">Fecha de adquisición</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="date" asp-for="Servicio.FechaAdquisicion">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="cuenta" class="col-md-5 col-lg-6 col-form-label">Cuenta registrada</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="text" asp-for="Servicio.CuentaRegistrada">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="contrasena" class="col-md-5 col-lg-6 col-form-label">Contraseña</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="text" asp-for="Servicio.Contrasena">
                                </div>
                            </div>

                           @*  <div class="row mb-3">
                                <label for="fechaM" class="col-md-5 col-lg-6 col-form-label">Última modificación</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="date" asp-for="Servicio.UltimaModificacionContrasena">
                                </div>
                            </div> *@

                            <div class="row mb-3">
                                <label for="url" class="col-md-5 col-lg-6 col-form-label">URL</label>
                                <div class="col-md-7 col-lg-6">
                                    <input class="form-control" type="text" asp-for="Servicio.Url">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="notas" class="col-md-5 col-lg-6 col-form-label">Notas</label>
                                <div class="col-md-7 col-lg-6">
                                    <textarea class="form-control" id="floatingTextarea" style="height: 100px;" asp-for="Servicio.Notas">
                                    </textarea>
                                </div>
                            </div>

                            <br />
                            <div class="row mb-3">

                                <div class="d-inline-flex justify-content-center" role="group">
                                    <button type="button" class="btn btn-sm btn-warning me-2" onclick="location.href='@Url.Action("Index", "Servicios")'">Volver</button>
                                    <button type="submit" class="btn btn-sm btn-success">Crear</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>