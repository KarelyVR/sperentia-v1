@model Sperientia___SGI.ViewModel.ServiciosViewModel

@{
    ViewData["Title"] = "Detalles Servicio";
    Layout = "_LayoutAdmin";
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card ">
                <div class="card-body ">
                    <h5 class="card-title text-center pb-0 fs-4">Detalles</h5>
                    <br />

                    <div class="m-4 d-flex  justify-content-center">
                        <form>

                            <div class="row mb-3">
                                <label for="id" class="col-md-5 col-lg-6 col-form-label">Id servicio</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="id" class="col-form-label">
                                        @Model.Servicio.IdServicio
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="nombre" class="col-md-5 col-lg-6 col-form-label">Nombre</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="nombre" class="col-form-label">
                                        @Model.Servicio.Nombre
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="costo" class="col-md-5 col-lg-6 col-form-label">Costo</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="costo" class="col-form-label">
                                        $@Model.Servicio.Costo
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="divisa" class="col-md-5 col-lg-6 col-form-label">Divisa</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="divisa" class="col-form-label">
                                        @Model.Servicio.Divisa.Nombre
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="frecuencia" class="col-md-5 col-lg-6 col-form-label">Frecuencia de pago</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="frecuencia" class="col-form-label">
                                        @Model.Servicio.CostoFrecuencia
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="fechaA" class="col-md-5 col-lg-6 col-form-label">Fecha de adquisición</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="fechaA" class="col-form-label">
                                        @Model.Servicio.FechaAdquisicion?.ToString("dd 'de' MMMM 'de' yyyy")
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="cuenta" class="col-md-5 col-lg-6 col-form-label">Cuenta registrada</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="cuenta" class="col-form-label">
                                        @Model.Servicio.CuentaRegistrada
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="contrasena" class="col-md-5 col-lg-6 col-form-label">Contraseña</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="contrasena" class="col-form-label">
                                        @Model.Servicio.Contrasena
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="modificacion" class="col-md-5 col-lg-6 col-form-label">Última modificación</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="modificacion" class="col-form-label">
                                        @Model.Servicio.UltimaModificacionContrasena?.ToString("dd 'de' MMMM 'de' yyyy")
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="url" class="col-md-5 col-lg-6 col-form-label">URL</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="url" class="col-form-label">
                                        <a href="#">@Model.Servicio.Url</a>
                                    </label>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="notas" class="col-md-5 col-lg-6 col-form-label">Notas</label>
                                <div class="col-md-7 col-lg-6">
                                    <label for="notas" class="col-form-label">
                                        @Model.Servicio.Notas
                                    </label>
                                </div>
                            </div>

                            <br />
                            <div class="row mb-3">

                                <div class="d-inline-flex justify-content-center" role="group">
                                    <button type="button" class="btn btn-sm btn-warning me-2" onclick="location.href='@Url.Action("Index", "Servicios")'">Volver</button>
                                    @* <button type="button" class="btn btn-sm btn-danger me-2" data-bs-toggle="modal" data-bs-target="#verticalycentered">Eliminar</button> *@
                                    <a class="btn btn-sm btn-success" asp-action="Modificar" asp-route-id="@Model.Servicio.IdServicio">Modificar</a>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>


